{
  "name": "@splightplatform/splight-lib-ts",
  "version": "0.0.6-5",
  "type": "module",
  "license": "MIT",
  "repository": "https://github.com/splightplatform/splight-lib-ts.git",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "require": "./dist/*/index.cjs",
      "import": "./dist/*/index.js",
      "types": "./dist/*/index.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "engine": [
        "dist/engine/index.d.ts"
      ],
      "account": [
        "dist/account/index.d.ts"
      ],
      "hub": [
        "dist/hub/index.d.ts"
      ],
      "backoffice": [
        "dist/backoffice/index.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "axios": "^1.3.2",
    "cspell": "^6.26.3",
    "geojson": "^0.5.0",
    "prettier": "^2.8.4"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.34.4",
    "@types/geojson": "^7946.0.10",
    "@types/jest": "^29.4.0",
    "@types/node": "*",
    "jest": "^29.5.0",
    "ts-jest": "^29.0.5",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "build": "tsup src/ --format cjs,esm,iife --dts --clean",
    "autobundle": "tsup src/ --format cjs,esm,iife --dts --clean --watch",
    "lint:typecheck": "tsc",
    "lint:eslint": "eslint src/ --ext .ts",
    "lint:prettier": "prettier --check src/ --ext .ts",
    "lint:spellcheck": "cspell --no-progress  ./src/**/*.ts",
    "test": "jest"
  },
  "cspell": {
    "ignoreWords": [
      "splight"
    ]
  },
  "jest": {
    "setupFiles": [
      "./src/test/setup.ts"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  }
}
