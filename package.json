{
  "name": "@splightplatform/splight-lib-ts",
  "version": "0.0.7-182",
  "type": "module",
  "license": "MIT",
  "repository": "https://github.com/splightplatform/splight-lib-ts.git",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "require": "./dist/*/index.cjs",
      "import": "./dist/*/index.js",
      "types": "./dist/*/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "axios": "^1.6.4",
    "cspell": "^8.2.0",
    "esbuild": "^0.19.5",
    "geojson": "^0.5.0",
    "prettier": "^2.8.4"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.34.4",
    "@types/geojson": "^7946.0.10",
    "@types/jest": "^29.4.0",
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "ts-jest": "^29.0.5",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "prettify": "prettier --write \"./**/*.{js,jsx,ts,tsx,json}\"",
    "build": "tsup src/index.ts --format cjs,esm,iife --dts --clean",
    "autobundle": "tsup src/index.ts --format cjs,esm,iife --dts --clean --watch",
    "lint:typecheck": "tsc --noEmit",
    "lint:eslint": "eslint src/ --ext .ts",
    "lint:prettier": "prettier --check src/",
    "lint:spellcheck": "cspell --no-progress --config cspell.json ./src/**/*.ts",
    "lint:format": "prettier --write .",
    "lint": "npm run lint:eslint && npm run lint:prettier && npm run lint:spellcheck && npm run lint:typecheck",
    "test": "jest"
  },
  "cspell": {
    "ignoreWords": [
      "splight",
      "backoffice",
      "splightplatform",
      "splightadmin"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "setupFiles": [
      "./src/test/setup.ts"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  }
}
